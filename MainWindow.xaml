<Window x:Class="StackShuffle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackShuffle"
        mc:Ignorable="d"
        Title="StackShuffle" Height="500" Width="400">

    <Border Padding="5">
        <StackPanel>
            <TabControl Height="445" Margin="0 0 0 2">
                <TabItem Header="Borrow">
                    <Grid Background="#FFE5E5E5"/>

                </TabItem>
                <TabItem Header="Return">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
            <TextBlock Text="Copyright Library Freaks, Inc. circa 2018. All rights reserved." FontSize="10" FontWeight="Bold" />
        </StackPanel>
    </Border>
</Window>
